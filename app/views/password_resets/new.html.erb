<% content_for(:title, t('.title')) %>
  <div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-sm bg-white rounded-2xl shadow-lg p-8">
      <h1 class="text-xl font-semibold mb-4 text-center"><%= t('.title') %></h1>
      <%= form_with url: password_resets_path do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
        </div>
        <%= f.submit t('.submit'), class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200 font-semibold" %>
      <% end %>
      <div class='mt-4text-center text-sm text-blue-600 font-medium space-y-1'>
        <%= link_to 'ログイン画面に戻る', login_path %>
      </div>
    </div>
  </div>