<% content_for(:title, t('.title')) %>
<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-sm bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-xl font-semibold mb-4 text-center"><%= t('.title') %></h1>
      <div class="mb-4">
      <%= "#{t('helpers.label.email')} #{@user.email}" %>
      </div>
      <%= form_with model: @user, url: password_reset_path do |f| %>
        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <p class="text-sm">8文字以上で入力してください。</p>
          <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
        </div>
        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
        </div>
        <%= f.submit t('helpers.submit.update'), class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200 font-semibold" %>
      <% end %>
  </div>
</div>
