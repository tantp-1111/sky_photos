<%= form_with model: post, class: "new_post space-y-6" do |f| %>
  <%= render partial: 'shared/error_messages', locals: { object: post } %>
  <div class="mb-4">
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :title, placeholder: "一言で。例）青空気持ちいい,雲の形が〇〇みたい", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
  </div>
  <div class="mb-6">
    <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <p class="text-sm text-black mb-4">※空欄可</p>
    <%= f.text_area :body, placeholder: "撮影時間や空を見上げたときの感情など。例）買い物帰りに見上げた夕空。疲れたけどこの綺麗な空みれたから頑張れそう！", rows: 5, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
  </div>

    <%= render 'posts/image_preview', form: f, post: post %>

  <div class="pt-4">
    <%= f.submit t('defaults.post'), class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200 font-semibold mb-8" %>
  </div>
<% end %>