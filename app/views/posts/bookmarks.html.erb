<div class="m-8">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% if @bookmark_posts.present? %>
      <%= render @bookmark_posts %>
    <% else %>
      <div class="col-span-full text-center text-gray-500 py-8">
        <p><%= t('.no_result') %></p>
      </div>
    <% end %>
  </div>
</div>