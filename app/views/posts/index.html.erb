<div class="m-8">

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <% if @posts.present? %>
    <% @posts.each do |post| %>
      <div id="post-id-<%= post.id %>" class="bg-white border border-gray-800 shadow-md">
        <div class="overflow-hidden">
          <%= image_tag "place_holder.png", class: "w-full h-48 object-cover border border-gray-300" %>
        </div>
        <div class="p-2 text-center">
          <h4 class="text-lg font-semibold mt-1 mb-1"><%= post.title %></h4>
        
          <div class="text-sm text-gray-500 mb-1 ">
            <p><%= post.user.name %></p>
            <p><%= l post.created_at %></p>
          </div>

        <div class="flex space-x-3 justify-center">
          <%= link_to '#', id: "button-edit-#{post.id}", class: "text-blue-600 hover:underline" do %>
             編集
          <% end %>
          <%= link_to '#', id: "button-delete-#{post.id}", method: :delete, data: { confirm: '' }, class: "text-red-600 hover:underline" do %>
            削除
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    <div class="col-span-3 text-center text-gray-500 py-8">
      掲示板がありません
    </div>
  <% end %>
</div>
</div>