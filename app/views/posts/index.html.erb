<% content_for(:title, t('.title')) %>
<div class="m-8">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% if @posts.present? %>
      <%= render @posts %>
    <% else %>
      <div class="col-span-full text-center text-gray-500 py-8">
        掲示板がありません
      </div>
    <% end %>
  </div>
  <div class="mt-8">
  <%= paginate @posts %>
  </div>
</div>