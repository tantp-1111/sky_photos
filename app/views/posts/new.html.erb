<div class="container mx-auto px-4 py-8">
  <div class="flex justify-center">
    <div class="w-full max-w-md">
      <h1 class="text-xl font-semibold text-center mb-8"><%= t('.title') %></h1>
      <%= form_with model: @post, class: "new_post space-y-6" do |f| %>
      <%= render partial: 'shared/error_messages', locals: { object: @post } %>
      <div class="mb-4">
        <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>
      <div class="mb-6">
        <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :body, rows: 5, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>
      <div class="pt-4">
        <%= f.submit nil, class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200 font-semibold mb-8" %>
      </div>
    <% end %>
  </div>
</div>