<h1><%= t('.title') %></h1>
      <%= form_with model: @post, class: "new_post" do |f| %>
        <div class="mb-4">
          <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
        </div>
        <div class="mb-6">
          <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :body, rows: 5, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
        </div>
        <%= f.submit nil, class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200 font-semibold" %>
        <% end %>
        