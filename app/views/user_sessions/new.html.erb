<% content_for(:title, t('.title')) %>
<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class=" max-w-sm bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-xl font-semibold mb-4 text-center"><%= t('.title') %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
        </div>
        <div class="mb-6">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
        </div>
          <%= f.submit t('.login'), class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200 font-semibold" %>
        <% end %>
        <div class='mt-4text-center text-sm text-blue-600 font-medium space-y-1'>
          <%= link_to t('.to_register_page'), new_user_path %>
          <%= link_to t('.password_forget'), '#' %>
        </div>

    </div>
</div>