<header class="bg-gray-800 shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- ロゴ -->
      <%= link_to root_path, class: "flex items-center" do %>
        <h1 class="text-2xl font-bold text-white hover:text-sky-300 transition-colors">
          SkyPhotos
        </h1>
      <% end %>

      <!-- 投稿ナビゲーション -->
      <nav class="flex space-x-8">
          <%= link_to t('header.login'), login_path,
          class: "text-gray-400 hover:text-sky-200 px-3 py-2 rounded-md text-sm font-medium transition-colors" %>
          <%= link_to t('header.sign_up'), new_user_path,
          class: "text-gray-400 hover:text-sky-200 px-3 py-2 rounded-md text-sm font-medium transition-colors" %>
      </nav>
    </div>
  </div>

</header>
