<% if @comment.errors.present? %>
  <!-- エラー内容や入力値を保持したままフォームを再表示 -->
  <%= turbo_stream.replace "comment-edit-#{@comment.id}" do %>
    <%= render 'comments/edit_form', comment: @comment %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "comment-edit-#{@comment.id}" do %>
    <%= render 'comments/comment', comment: @comment %>
  <% end %>
<% end %>