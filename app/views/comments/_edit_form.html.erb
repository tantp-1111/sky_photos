<div class="border border-gray-300 rounded-md p-3 mb-3" id="comment-edit-<%= comment.id %>">
  <%= form_with model: comment, url: comment_path(comment) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :body, class: "w-full border rounded p-2 mb-3 focus:outline-none focus:ring focus:ring-blue-300", rows: "4" %>
    <div class="flex justify-end space-x-2">
      <%= f.submit "更新", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      <%= link_to "キャンセル", comment_path(comment), class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600", data: { turbo_stream: true } %>
    </div>
  <% end %>
</div>