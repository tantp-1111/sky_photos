<div id="comment-<%= comment.id %>" class="border border-gray-300 bg-gray-50 rounded-md p-3 mb-3">
  <h3 class="text-sm font-semibold text-gray-800"><%= comment.user.name %></h3>
  <p class="text-gray-700 whitespace-pre-line"><%= simple_format(comment.body) %></p>

  <% if current_user.own?(comment) %>
    <div class="flex justify-end space-x-4 mt-2">
      <%= link_to edit_comment_path(comment), data: { turbo_stream: true }, class: "text-blue-600 hover:underline" do %>
        編集
      <% end %>
      <%= link_to comment_path(comment),  data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') }, class: "text-red-600 hover:underline" do %>
        削除
      <% end %>
    </div>
  <% end %>
</div>