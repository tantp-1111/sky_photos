<% content_for(:title, t('.title')) %>
<div class="max-w-4xl mx-auto p-6">
  <h3 class="text-2xl text-center font-bold text-gray-900 mb-4"><%= t('.title') %></h3>
  <div class="flex justify-between items-center mb-8">
    <h4 class="text-lg font-bold">プロフィール</h4>
    <%= link_to t('defaults.edit'), edit_profile_path,
        class: 'bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded' %>
  </div>
  
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="w-full">
      <tr class="border-b">
        <th class="bg-gray-50 px-6 py-3 text-left text-sm font-medium text-gray-900">
          <%= User.human_attribute_name(:email) %>
        </th>
        <td class="px-6 py-3 text-sm text-gray-700">
          <%= current_user.email %>
        </td>
      </tr>
      <tr>
        <th class="bg-gray-50 px-6 py-3 text-left text-sm font-medium text-gray-900">
          <%= User.human_attribute_name(:name) %>
        </th>
        <td class="px-6 py-3 text-sm text-gray-700">
          <%= current_user.name %>
        </td>
      </tr>
    </table>
  </div>

  <div class="mt-8">
  <h4 class="text-lg font-bold mb-4">あなたの投稿</h4>
  <% @posts.each do |post| %>
    <div class="mb-4 p-4 border rounded">
      <% if post.image.attached? %>
        <%= image_tag post.image, class: 'w-16 h-16 object-cover rounded mb-2' %>
      <% end %>
      
      <%= link_to post.title, post_path(post), class: 'text-blue-600' %>
      <span class="text-gray-500 text-sm ml-2">
        <%= l post.created_at %>
      </span>
    </div>
  <% end %>
</div>

</div>