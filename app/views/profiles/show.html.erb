<% content_for(:title, t('.title')) %>
<div class="w-full max-w-4xl mx-auto p-6">
  <h3 class="text-2xl text-center font-bold text-gray-900 mb-4"><%= t('.title') %></h3>
  <div class="flex justify-between items-center mb-8">
    <h4 class="text-lg font-bold">プロフィール</h4>
    <%= link_to t('defaults.edit'), edit_profile_path,
        class: 'bg-sky-500 hover:bg-sky-700 text-white px-4 py-2 rounded-full' %>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="w-full">
      <tr class="border-b">
        <th class="bg-gray-50 px-6 py-3 text-left text-sm font-medium text-gray-900">
          <%= User.human_attribute_name(:email) %>
        </th>
        <td class="px-6 py-3 text-sm text-gray-700">
          <%= current_user.email %>
        </td>
      </tr>
      <tr>
        <th class="bg-gray-50 px-6 py-3 text-left text-sm font-medium text-gray-900">
          <%= User.human_attribute_name(:name) %>
        </th>
        <td class="px-6 py-3 text-sm text-gray-700">
          <%= current_user.name %>
        </td>
      </tr>
    </table>
  </div>

  <div class="mt-8">
    <h4 class="text-lg font-bold mb-4">あなたの投稿</h4>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% @posts.each do |post| %>
      <div class="p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition flex items-center gap-4">
        <%= image_tag post.image, class: "w-20 h-20 object-cover rounded-lg border-2 border-sea" %>
        <div class="flex-1 min-w-0">
          <%= link_to post.title, post_path(post),
           class: "block text-lg font-semibold text-gray-600 hover:text-sky-500 transition" %>
          <p class="text-sea/80 text-sm mt-1 truncate"><%= post.body.truncate(50) %></p>
          <p class="text-sea/50 text-xs mt-2"><%= l post.created_at, format: :short %></p>
          <p class="text-sea/50 text-xs mt-2"><%= post.emo_count %>エモ</p>
        </div>
      </div>
    <% end %>
    </div>
  </div>

</div>